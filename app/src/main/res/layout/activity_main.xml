<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLight"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:autoText="true"
        android:backgroundTint="@color/white2"
        android:gravity="right"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        style="@style/Theme.Laboratorio_1"
        android:layout_width="411dp"
        android:layout_height="642dp"
        android:background="@color/backgroundColor"

        android:gravity="bottom|fill"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result">

        <EditText
            android:id="@+id/frase"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:ems="10"
            android:hint="Ingrese una frase..."
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <Switch
            android:id="@+id/switchTema"
            style="@style/Theme.Laboratorio_1"
            android:layout_width="204dp"
            android:layout_height="46dp"
            android:fontFamily="monospace"
            android:text="   Tema Oscuro" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="borrarTodo"
                android:text="@string/AC"
                android:textColor="@color/primaryblack"
                app:backgroundTint="@color/white2"
                app:cornerRadius="200dp"
                app:rippleColor="#000000" />

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="borrarLinea"
                android:text="@string/borrar"
                android:textColor="@color/primaryblack"
                app:cornerRadius="200dp"
                app:rippleColor="#000000" />

            <Button
                android:id="@+id/porcentaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="botonPorcentajeF"
                android:text="@string/percent"
                android:textColor="@color/primaryblack"
                app:backgroundTint="@color/white2"
                app:cornerRadius="200dp" />

            <Button
                android:id="@+id/division"
                style="@style/Theme.Laboratorio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTintMode="add"
                android:fontFamily="monospace"
                android:onClick="botonDivisionF"
                android:text="@string/div"
                android:textColor="@color/primaryblack"
                app:backgroundTint="#00BCD4"
                app:backgroundTintMode="add"
                app:cornerRadius="200dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="botonSiete"
                android:text="@string/siete"
                android:textColor="@android:color/background_dark"
                app:cornerRadius="200dp" />

            <Button
                android:id="@+id/boton8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="botonOcho"
                android:text="@string/ocho"
                android:textColor="@android:color/background_dark"
                app:cornerRadius="200dp" />

            <Button
                android:id="@+id/boton9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="botonNueve"
                android:text="@string/nueve"
                android:textColor="@android:color/background_dark"
                app:cornerRadius="200dp" />

            <Button
                android:id="@+id/x"
                style="@style/Theme.Laboratorio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:fontFamily="monospace"
                android:onClick="botonMultiplicacionF"
                android:text="@string/multi"
                android:textColor="@color/primaryblack"
                app:backgroundTint="#00BCD4"
                app:cornerRadius="200dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="#EEEEEE"
                android:fontFamily="monospace"
                android:onClick="botonCuatro"
                android:text="@string/cuatro"
                android:textColor="@color/primaryblack"
                app:cornerRadius="200dp" />

            <Button
                android:id="@+id/boton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="botonCinco"
                android:text="@string/cinco"
                android:textColor="@color/primaryblack"
                app:cornerRadius="200dp" />

            <Button
                android:id="@+id/boton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="botonSeis"
                android:text="@string/seis"
                android:textColor="@color/primaryblack"
                app:cornerRadius="200dp" />

            <Button
                android:id="@+id/menos"
                style="@style/Theme.Laboratorio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:fontFamily="monospace"
                android:onClick="botonRestaF"
                android:text="@string/menos"
                android:textColor="@color/primaryblack"
                app:backgroundTint="#00BCD4"
                app:cornerRadius="200dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="botonUno"
                android:text="@string/uno"
                android:textColor="@color/primaryblack"
                app:cornerRadius="200dp" />

            <Button
                android:id="@+id/boton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="botonDos"
                android:text="@string/dos"
                android:textColor="@color/primaryblack"
                app:cornerRadius="200dp" />

            <Button
                android:id="@+id/boton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="botonTres"
                android:text="@string/tres"
                android:textColor="@color/primaryblack"
                app:cornerRadius="200dp" />

            <Button
                android:id="@+id/mas"
                style="@style/Theme.Laboratorio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:fontFamily="monospace"
                android:onClick="botonSumaF"
                android:text="@string/mas"
                android:textColor="@color/primaryblack"
                app:backgroundTint="#00BCD4"
                app:cornerRadius="200dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="botonCero"
                android:text="@string/cero"
                android:textColor="@color/primaryblack"
                app:cornerRadius="200dp" />

            <Button
                android:id="@+id/botonPunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:backgroundTint="@color/white2"
                android:fontFamily="monospace"
                android:onClick="botonPuntoF"
                android:text="@string/punto"
                android:textColor="@color/primaryblack"
                app:cornerRadius="200dp" />

            <Button
                android:id="@+id/botonEqual"
                style="@style/Theme.Laboratorio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:height="100dp"
                android:fontFamily="monospace"
                android:onClick="botonResultado"
                android:text="@string/igual"
                android:textColor="@color/primaryblack"
                app:backgroundTint="#00BCD4"
                app:cornerRadius="200dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>